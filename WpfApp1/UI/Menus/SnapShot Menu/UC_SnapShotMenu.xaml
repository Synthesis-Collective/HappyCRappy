<UserControl x:Class="HappyCRappy.UC_SnapShotMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HappyCRappy"
             d:DataContext="{d:DesignInstance Type=local:VM_SnapshotMenu}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal">
            <Button Content="Take Snapshot" Command="{Binding TakeSnapShot}" Foreground="Green" Margin="5 0 20 0"/>
            <TextBlock Text="Compare to Snapshot" VerticalAlignment="Center"/>
            <ComboBox SelectedItem="{Binding SelectedSnapshotDateStr}" ItemsSource="{Binding AvailableSnapshotDates}"/>
            <TextBlock Text="of mod" VerticalAlignment="Center"/>
            <ComboBox SelectedItem="{Binding SelectedSnapshotMod}" ItemsSource="{Binding AvailableSnapshotMods}"/>
            <TextBlock Text="Display as" Margin="5 0 5 0" VerticalAlignment="Center"/>
            <RadioButton Content="JSON" IsChecked="{Binding DisplayAsJson}" GroupName="Serialization"/>
            <RadioButton Content="YAML" IsChecked="{Binding DisplayAsYaml}" GroupName="Serialization"/>
        </StackPanel>

        <local:UC_Snapshot Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" DataContext="{Binding DisplayedSnapshot}"/>
    </Grid>
</UserControl>
